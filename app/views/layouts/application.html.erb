<!DOCTYPE html>
<html>
  <head>
    <title>Murky Art</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

  </head>

  <body>
    <section>
      <nav class="navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

          </div>
          <div class="navbar-brand brand-name navbar-left">
            <a class="pull-left"><%= image_tag("logo.jpg", width: "40", height: "40") %></a>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li class="nav-font"><%= link_to 'Home', root_path %></li>
              <li class="nav-font"><%= link_to 'Products', products_path %></li>
              <li class="nav-font"><%= link_to 'About', static_pages_about_path %></li>
              <li class="nav-font"><%= link_to 'Contact', static_pages_contact_path %></li>
              <li style="margin: 0.8em 0 0 13.5em;">
                <%= form_tag("/products", method: "get") do %>
                  <%= label_tag(:q, "Search for:") %>
                  <%= text_field_tag(:q, nil, class: 'black') %>
                  <%= submit_tag("Search", class: 'btn btn-danger') %>
                <% end %>
              </li>
              </ul>
              <ul class="nav navbar-nav search float-r">
                <li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
                <li>
                  <% if user_signed_in? %>

                    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                  <% else %>
                    <%= link_to('Login', new_user_session_path) %>
                  <% end %>
                </li>
              </ul>

          </div>
        </div>
      </nav>

      <br />
      <br />
      <br />

      <div class="notice">
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>

      <br />
      <div class="" style="">
        <%= yield %>
      </div>

      <div class="push"></div>
      <footer class="footer">
        <p>&copy; 2017 Murky Art</p>
      </footer>
    </section>

  </body>
</html>
