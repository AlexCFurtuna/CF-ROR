<div class="landing">
  <h1 class="title"><span style="padding: 0.2em;">Welcome to Murky</span><span class="murky-colours"> Art</span></h1>
  <div class="button">
      <h1><button type="button" name="button"><h2></span><%= link_to "Find out who's your hero?", products_path %></h2></button></h1>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12 background">
        <!--<%= image_tag('background2.jpg', class: 'img-responsive') %>-->
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
  $('.title').hide();
  $('.title').delay(500).fadeIn(1500);
  $('.button').hide();
  $('.button').delay(2500).fadeIn(1500);
  $('.col-sm-12.background').hide();
  $('.col-sm-12.background').delay(1500).fadeIn(1500);
});
</script>
