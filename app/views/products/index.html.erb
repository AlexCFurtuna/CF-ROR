
<article class="container">
  <p id="notice"><%= notice %></p>
  <h2>Products</h2>

  <hr>

  <div class="container-fluid prod">
    <% @products.each do |product| %>
     <%= render product %>
    <% end %>
  </div>

  <hr>
  <% if signed_in? && current_user.admin? %>
  <%= link_to 'New Product', new_product_path , class: "btn btn-default" %>
  <% end %>

</article>
