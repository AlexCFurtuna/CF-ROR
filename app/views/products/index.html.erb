<div class="products">
  <h1>Portraits</h1>
  <p id="notice"><%= notice %></p>
  <div class="header">
    <p class="pull-right btn">
      <% if signed_in? && current_user.admin? %>
      <%= link_to 'New Product', new_product_path , class: "btn btn-danger" %>
      <% end %>
    </p><!-- new product btn -->
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-1">

      </div>
      <div class="sidebar col-sm-2">

        <ul>
          <li><%= image_tag("logo.jpg", width: "200", height: "200") %></li>
          <li class="sidebar-li"><%= link_to 'Portraits', products_path %></li>
          <li class="sidebar-li"><%= link_to 'T-Shirts', tshirts_path %></li>
          <li class="sidebar-li"><%= link_to 'Commissions', commissions_path %></li>
        </ul>
      </div>

      <div class="products col-sm-9">
          <%= render @products %>
        </div>
      </div>
    </div><!-- end of container-fluid -->
  </div>
</div>
<style media="screen">
  .col-sm-2 {
    margin-top: 1.3em;
  }
  .products.col-sm-9 {
    margin: 0 auto;
  }
  @media screen and (min-width: 768px) and (max-width: 1024px) {
    .col-sm-9 {
      float: right;
      position: relative;
      margin: 0 auto;
    }
  }

</style>

<%= will_paginate @products %>
