<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="header">
    <h2>Portraits</h2>
    <p class="pull-right">
      <% if signed_in? && current_user.admin? %>
      <%= link_to 'New Product', new_product_path , class: "btn btn-default" %>
      <% end %>
    </p><!-- new product btn -->
  </div>


  <div class="products">
    <div class="row">
      <%= render @products %>
      </div>
    </div>
  </div>
</div>

<%= will_paginate @products %>
