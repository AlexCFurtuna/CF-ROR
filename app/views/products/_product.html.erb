<% @products.each do |product| %>
  <div class="col-sm-6 col-md-6 col-lg-4 product-info">

    <div class="product-details">
      <%= image_tag("bike.jpg", class: "img-responsive bike-img") %>
      <h3 class="product-header"><%= link_to product.name, product %></h3>
      <p class="product-descriptions">
        <%= product.description %>
        </p>
        <p>
          $<%= product.price %>
          <%= product.colour %>
        </p>
        <p>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>


    </div>

  </div><!-- /col -->
<% end %>
