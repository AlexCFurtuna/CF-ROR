<% cache product do %>
<div class="col-sm-6 col-md-6 col-lg-4 product-info">
  <div class="product-details">
    <% if product.image_url.present? %>
    <%= link_to image_tag(product.image_url, class: "img-responsive"), product %>
    <% end %>
  </div><!--product-details-->
</div><!-- /col -->
<% end %>
