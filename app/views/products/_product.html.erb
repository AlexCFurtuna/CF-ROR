<div class="container col-sm-3">
  <% if product.image_url.present? %>
    <%= link_to image_tag(product.image_url, class: "img-responsive", size: '350x200' ), product %>
  <% end %>
  <div class="middle">
    <div class="text-on">
      <%= product.name %>
    </div>
  </div>

</div><!-- /col -->

<style media="screen">
  .container.col-sm-3 {
    height: 100%;
    width: 250px;
    border: 3px solid lightgrey;
    background-color: white;
    padding: 30px;
    margin: 1em 1.5em 0  1.5em;
    -webkit-box-shadow: -18px 29px 19px -4px rgba(163,163,163,0.63);
    -moz-box-shadow: -18px 29px 19px -4px rgba(163,163,163,0.63);
    box-shadow: -18px 29px 19px -4px rgba(163,163,163,0.63);
    position: relative;
  }
  .middle {
  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
  width: 100%;
}
.container.col-sm-3:hover .middle {
  opacity: .8;
}

.text-on {
  background-color: white;
  color: black;
  font-size: 1.5em;
  padding: 10px;
  font-weight: lighter;
}

</style>
