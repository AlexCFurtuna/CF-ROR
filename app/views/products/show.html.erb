<section>
  <div class="show">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-lg-6">
        <% if @product.image_url.present? %>
        <%= image_tag(@product.image_url, class: "img-responsive") %>
        <% end %>

        <div class="product-info">

          <p><strong>Name:</strong>
          <%= @product.name %></p>

          <p><strong>Description:</strong>
          <%= @product.description %></p>

          <p><strong>Colour:</strong>
          <%= @product.colour %></p>

          <p><strong>Price:</strong>
          $<%= @product.price %></p>

          <% if signed_in? && current_user.admin? %>
          <%= link_to 'Purge',
            product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
          <% end %>

          <% if signed_in? && current_user.admin? %>
          <%= link_to 'Edit',
            product_path(@product), method: :edit, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
          <% end %>
          <br />

          <p class="rated" data-score="<%= @product.average_rating %>">Average rating : </p>

        </div><!--product-info-->
      </div><!--col-lg-6-->
      <div class="col-lg-6">
        <p><strong>Reviews</strong></p>
        <p><%= @product.highest_rating_comment %></p>
        <p><%= @product.lowest_rating_comment %></p>
        <%= render 'new_comment' %>
        <%= render 'comments' %>
        <% @comments.each do |comment| %>
          <% end %>
        <%= will_paginate @comments %>
      </div>
    </div><!--row-->
  </div><!--show-->
</section>
