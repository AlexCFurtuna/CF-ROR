<h1>Editing Product</h1>
<%= form_for(@product) do |f| %>
<div class="row">

  <div class="col-sm-12 col-md-3 col-lg-3">
  </div><!--centering-->

  <div class="col-sm-12 col-md-6 col-lg-6">

    <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control", placeholder: "Enter Product Name" %>
  </div>

  <div class="form-group">
  <%= f.label :description %><br>
  <%= f.text_area :description, class:"form-control", placeholder: "Enter Product Description" %>
  </div>

  <div class="form-group">
  <%= f.label :image_url %><br>
  <%= f.text_field :image_url, class:"form-control", placeholder: "Enter Image Url" %>
  </div>

  <div class="form-group">
  <%= f.label :colour%>
  <%= f.text_field :colour, class:"form-control", placeholder: "Enter Product Colour" %>
  </div>

  <div class="form-group">
  <%= f.label :price%>
  <%= f.text_field :price, class:"form-control", placeholder: "Enter Product Price" %>
  </div>

  <div class="actions btn">
  <%= f.submit %>
  </div>
</div><!--col-md-6-->
</div><!--row-->
<% end %>


<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
